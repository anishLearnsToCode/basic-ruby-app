<div class="container">
  <h1>Create New Player</h1>
  
  <% if flash[:errors]  %>
      <% flash[:errors].each do |error| %>
        <p><%= error %></p>
      <% end %>
  <% end %>

  <form action="/players" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label>First Name</label>
    <input type="text" name="player[first_name]"><br>

    <label>Last Name</label>
    <input type="text" name="player[last_name]"><br>

    <label>Age</label>
    <input type="text" name="player[age]"><br>

    <label>Team ID</label>
    <input type="text" name="player[team_id]"><br>

    <input type="submit" value="Create">
  </form>
</div>